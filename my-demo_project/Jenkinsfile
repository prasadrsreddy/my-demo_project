pipeline {
    agent any

    environment {
        // Optional: Set environment variables
        MAVEN_HOME = '/usr/share/maven'
    }

    tools {
        maven 'maven 3.9.10'   // Set the Maven version (must match what you have configured in Jenkins tools)
        jdk 'Java 17'         // Set the JDK version (must match Jenkins global tool config)
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout code from source control (GitHub, GitLab, etc.)
                git url: 'https://github.com/prasadrsreddy/my-demo_project.git', branch: 'main'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }

        stage('Deploy') {
            when {
                branch 'main'
            }
            steps {
                echo 'Deploying to production server...'
                // Add your deploy script/command here
            }
        }
    }

    post {
        success {
            echo 'Build completed successfully!'
        }
        failure {
            echo 'Build failed.'
        }
    }
}

